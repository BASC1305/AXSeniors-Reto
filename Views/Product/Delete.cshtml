@model AXSeniors_Reto.Models.ProductModel
@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row mb-lg-3">
        <div class="col-sm-12">
            <h3>Eliminar producto</h3>
        </div>

    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteProduct">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" disabled/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" disabled/>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Lot" class="control-label"></label>
                    <input asp-for="Lot" class="form-control" disabled/>
                    <span asp-validation-for="Lot" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" disabled/>
                    <span asp-validation-for="Unit" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" disabled/>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-primary" />
                </div>


            </form>
        </div>

    </div>

</div>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial"/>}
}
